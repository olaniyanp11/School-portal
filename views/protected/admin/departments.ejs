<%- include('./partials/header') %>
<%- include('./partials/sidebar') %>

<main class="min-h-screen w-full px-6 sm:px-10 pt-6 max-w-screen mx-auto">
  <div class="bg-[#0c0c0c] rounded-lg shadow p-6 w-full">
    <h2 class="text-xl font-semibold mb-4 text-gray-200">All Departments</h2>

    <a href="/admin/departments/new" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 text-sm mb-4 inline-block">Add Department</a>

    <ul class="space-y-4">
      <% if (departments.length === 0) { %>
      <p class="text-gray-400">No departments found.</p>
      <% } else { %>
      <% departments.forEach((dept, index) => { %>
      <li class="bg-[#141414] p-4 rounded flex flex-col sm:flex-row justify-between items-start sm:items-center">
        <div class="flex items-center gap-3">
          <div class="bg-blue-100 text-blue-600 rounded-full w-8 h-8 flex items-center justify-center">
            <span class="material-icons text-sm text-black"><%= index + 1 %></span>
          </div>
          <p class="text-gray-200 font-medium"><%= dept.name %></p>
        </div>
        <div class="mt-3 sm:mt-0 flex gap-3">
          <a href="/admin/departments/<%= dept._id %>/edit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">View</a>
          <form action="/admin/departments/<%= dept._id %>?_method=DELETE" method="POST">
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 text-sm">Delete</button>
          </form>
        </div>
      </li>
      <% }) %>
      <% } %>
    </ul>

  </div>
</main>
</div>
</div>
<%- include('./partials/footer') %>
